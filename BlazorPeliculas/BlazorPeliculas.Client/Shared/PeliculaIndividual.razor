<div class="me-2 mb-2" style="text-align: center">
    <a>
        <img src="@Pelicula!.Poster" alt="@Pelicula.Titulo" style="width: 300px" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;">
        @Pelicula.Titulo
    </p>
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@( ()=> EliminarPelicula.InvokeAsync(Pelicula) )">Borrar</button>
    </div>
</div>



@code {

    [Parameter, EditorRequired]
    public Pelicula? Pelicula { get; set; }

    [Parameter]
    public bool MostrarBotones { get; set; }

    [Parameter]
    public EventCallback<Pelicula> EliminarPelicula { get; set; }


    void Borrar()
    {
        Console.WriteLine($"Eliminando la película {Pelicula.Titulo}");
    }


}
